.row
  .col-lg-12.page-header
    .row
      .col-md-4
        %h1 Domains
      .col-md-4.col-md-offset-4
        .pull-right
          %h1
            = link_to 'Add Domain', '#', id: 'domain_new', class: 'btn btn-primary btn-lg', data: { toggle: :modal, 'target': '#addDomain' }

.modal.fade#addDomain{ tabindex: '-1', role: :dialog, 'aria-labelledby': :adminDomain, 'aria-hidden': "true" }
  = render partial: 'domain_modal', locals: { domain: @domain }

.row
  .col-lg-12
    .panle.panel-default
      .panle-body
        .dataTable_wrapper
          %table.table.table-striped.table-bordered.table-hover#dataTable-Domain
            %thead
              %tr
                %th Name
                %th Quota
                %th Max Quota
                %th Actions
            %tbody
              - @domains.each do |domain|
                %tr
                  %td= domain.name
                  %td= domain.allowed_quota
                  %td= domain.max_allowed_quota
                  %td
                    .col-sm-2
                      = link_to '#', class: 'domain_edit', data: { attributes: domain.json_presentation } do
                        %span.glyphicon.glyphicon-edit
                        Edit
                    .col-sm-3
                      = link_to domain_path(id: domain.id), method: :delete, data: { confirm: 'Are you sure ?' } do
                        %span.glyphicon.glyphicon-trash
                        Delete
                    .col-sm-2
                      = link_to domain_path(domain) do
                        %span.glyphicon.glyphicon-info-sign
                        Info
