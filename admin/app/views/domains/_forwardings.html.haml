.row
  .col-lg-12
    .panle.panel-default
      .panle-body
        .dataTable_wrapper
          %table.table.table-striped.table-bordered.table-hover#dataTable-Domain
            %thead
              %tr
                %th Source
                %th Destination
                %th Actions
            %tbody
              - forwardings.each do |forwarding|
                %tr
                  %td= forwarding.source
                  %td= forwarding.destination
                  %td
                    .row
                      .col-sm-2
                        = link_to '#', class: 'forwarding_edit', data: { attributes: forwarding.json_presentation } do
                          %span.glyphicon.glyphicon-edit
                          Edit
                      .col-sm-2
                        = link_to domain_path(domain), method: :delete, data: { confirm: 'Are you sure ?' } do
                          %span.glyphicon.glyphicon-trash
                          Delete
